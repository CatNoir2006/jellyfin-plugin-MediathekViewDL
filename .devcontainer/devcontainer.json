{
	"name": "MediathekViewDL Development",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/jellyfin-plugin-MediathekViewDL",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"ms-dotnettools.csharp",
				"ms-vscode.powershell",
				"editorconfig.editorconfig"
			],
			"settings": {
				"dotnet.defaultSolution": "Jellyfin.Plugin.MediathekViewDL.sln"
			}
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/powershell:1": {}
	},
	"postCreateCommand": "dotnet restore Jellyfin.Plugin.MediathekViewDL.sln",
	"remoteUser": "vscode"
}
